<div class="flex gap-12 justify-center items-end p-0 mx-0 font-bold lg:my-8 lg:text-xl">
  <header><!-- TODO Reduce to icon for small screens -->
    <a class="no-underline" href="{{ '/' | relative_url }}">
      <picture class="inline-block w-52 max-w-full lg:w-80" alt="{{ metadata.title | escape }}">
        <source srcset="{{ '/images/logo-dark.svg' | relative_url }}" media="(prefers-color-scheme: dark)" >
        <img alt="Logo {{ metadata.title }}" src="{{ '/images/logo.svg' | relative_url }}">
      </picture>
    </a>
  </header>
  <nav>
    <ul class="grid grid-cols-1 gap-0 list-none lg:mb-4 lg:grid-cols-3 lg:gap-4">
      <li><a class="text-black no-underline dark:text-slate-100" href="{{ '/about' | relative_url }}">About</a></li>
      <li><a class="text-black no-underline dark:text-slate-100" href="https://www.flickr.com/photos/{{ metadata.flickr_user_id }}/"><i class="fa-brands fa-flickr"></i> flickr</a></li>
      <li><a class="text-black no-underline dark:text-slate-100" href="https://www.facebook.com/{{ metadata.facebook_user_id }}"><i class="fa-brands fa-facebook-square"></i> facebook</a></li>
      {% for portfolio in portfolios -%}
      <li><a class="text-black no-underline dark:text-slate-100" href="{{ portfolio | relative_url }}">{{ portfolio | capitalize }}</a></li>
      {% endfor -%}
    </ul>
  </nav>
</div>
